<h1>Listing posts</h1>

<div class="ux-table-operation">
  <%= bx_link_to raw(bx_icon_tag("Æš", :label => "New Post")), new_post_path %>
</div>

<table class="ux-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.category_name %></td>
    <td><%= bx_link_to 'Show', post %></td>
    <td><%= bx_link_to 'Edit', edit_post_path(post), color: :blue %></td>
    <td><%= bx_link_to 'Destroy', post, method: :delete, color: :red, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @posts %>
